# Sender Environment Configuration
# Copy this file to .env and fill in your values

# Telegram Parser (account for reading leads)
TG_PARSER_API_ID=
TG_PARSER_API_HASH=
TG_PARSER_SESSION=

# Telegram Sender (account for sending messages)
TG_SENDER_API_ID=
TG_SENDER_API_HASH=
TG_SENDER_SESSION=

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Lead Inbox (where leads are forwarded)
LEAD_INBOX_PEER_ID=
LEAD_INBOX_TOPIC_ID=1

# Report Chat (notifications about sent messages)
REPORT_PEER_ID=
REPORT_TOPIC_ID=

# Timezone
SENDER_TIMEZONE=Europe/Moscow

# Work Window (when to send messages)
WORK_WINDOW_START=09:00
WORK_WINDOW_END=21:00

# Rate Limiting
RATE_LIMIT_MAX_MESSAGES=3
RATE_LIMIT_INTERVAL_MIN=90000
RATE_LIMIT_INTERVAL_MAX=180000
RATE_LIMIT_BURST_PAUSE=1800000

# Logging
LOG_LEVEL=info

